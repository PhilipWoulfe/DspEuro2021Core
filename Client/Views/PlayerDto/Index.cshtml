@model IEnumerable<TodoListClient.Dtos.PlayerDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container body-content">
    <h2>Index</h2>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerName)
                </th>
                <th>Points (Current Golden Boot Points)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.ActionLink(item.PlayerName, "Details", new { id = item.Id })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                        @if (item.GoldenBootPoints != 0) {
                    <span>(+@Html.DisplayFor(modelItem => item.GoldenBootPoints))</span>
                        }
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>